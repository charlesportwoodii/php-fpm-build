#!/bin/bash

set +e

VERSION=
which systemctl
if [ "$?" == 1 ]
then
    $(which service) php-fpm stop
else
    $(which systemctl) stop php-fpm-$VERSION.service
    $(which systemctl) disable php-fpm-$VERSION.service
fi

update-alternatives --remove php $(which php$VERSION)
update-alternatives --remove php-config $(which php-config$VERSION)
update-alternatives --remove phpize $(which phpize$VERSION)
update-alternatives --remove php-cgi $(which php-cgi$VERSION)
update-alternatives --remove phpdbg $(which phpdbg$VERSION)

exit 0
